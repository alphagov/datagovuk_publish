<div class="form-group" id="date_form_group">
  <fieldset>
    <legend>
      <span class="form-label-bold">
          Time period for this link
          <span class="form-hint">For example, 3 2016</span>
      </span>
    </legend>

    <div class="form-date">
      <div class="form-group form-group-month<% if @datafile.errors[:month].present? %> form-group-error<% end %>">
        <label for="month">Month</label>
        <% @datafile.errors[:month].each do |message| %>
          <span class="error-message"><%= message %></span>
        <% end %>

        <%= text_field_tag "datafile[month]", @datafile.dates[:month], id: "month", class: "form-control" %>
      </div>

      <div class="form-group form-group-year<% if @datafile.errors[:year].present? %> form-group-error<% end %>">
        <label for="year">Year</label>
        <% @datafile.errors[:year].each do |message| %>
          <span class="error-message"><%= message %></span>
        <% end %>

        <%= text_field_tag "datafile[year]", @datafile.dates[:year], id: "year", class: "form-control" %>
      </div>
    </div>
  </fieldset>
</div>
