<div class="form-group">
	<fieldset>
    <legend>
      <span class="form-label-bold">Time period for this link</span>
    </legend>
		<div class="form-date">
			<div id="year_form_group" class="form-group form-group-year<% if @datafile.errors[:start_year].present? %> form-group-error<% end %>">
				<label class="form-label" for="period_year">Year</label>
        <span class="form-hint">For example, 2016</span>
        <% if @datafile.errors[:start_year].present? %>
          <span class="error-message">Please enter a valid year</span>
        <% end %>
				<%= text_field_tag 'datafile[start_year]', @datafile.start_year, id: "period_year", class: "form-control" %>
			</div>
		</div>
	</fieldset>
</div>
