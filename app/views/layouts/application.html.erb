<% content_for :head do %>
  <%= stylesheet_link_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<% end %>
<% content_for :page_title do %>
  Data.gov.uk - Publish Data
<% end %>
<% content_for :content do %>
  <div id="skiplink-container">
    <div>
      <a href="#content" class="skiplink">Skip to main content</a>
    </div>
  </div>


   <header role="banner" id="global-header" class="with-proposition global-header-dgu">
    <div class="header-wrapper">
      <div class="header-global">
        <div class="header-logo">
          <a href="/" title="Go to the GOV.UK homepage" id="logo" class="content">
            data.gov.uk<span class="separator"></span>publish
          </a>
        </div>
      </div>
    </div>
  </header>

  <main id="content" role="main" tabindex="-1">
    <div class="phase-banner">
      <p>
        <strong class="phase-tag">BETA</strong>
        <span>This is a new service â€“ your <a href="#">feedback</a> will help us to improve it.</span>
      </p>
    </div>
    <%= yield %>
  </main>

  <div id="global-app-error" class="app-error hidden"></div>

  <script>if (typeof window.GOVUK === 'undefined') document.body.className = document.body.className.replace('js-enabled', '');</script>


<% end %>
<%= render template: 'layouts/govuk_template' %>
