<div class="form-group" id="<%= period %>_date_form_group">
  <fieldset>
    <legend>
      <span class="form-label-bold">
          <%= period.humanize %> Date
        <span class="form-hint">For example, 31 3 2016</span>
      </span>
    </legend>

    <div id="<%=period%>_date" class="form-group form-date<% if @datafile.errors.key? (period+"_date").to_sym %> form-group-error<% end %>">
      <% if @datafile.errors.key? (period+"_date").to_sym %>
        <span class="error-message">Please enter a valid <%= period %> date</span>
      <% end %>
      <div class="form-group form-group-day<% if @datafile.errors.key? (period+"_day").to_sym %> form-group-error<% end %>">
        <label for="#<%= period %>_day">Day</label>
        <% if @datafile.errors.key? (period+"_day").to_sym %>
          <span class="error-message">Please enter a valid <%= period %> day</span>
        <% end %>
        <%= text_field_tag "datafile[#{period}_day]", @datafile.dates[period][:day], id: "#{period}_day", class: "form-control" %>
      </div>

      <div class="form-group form-group-month<% if @datafile.errors.key? (period+"_month").to_sym %> form-group-error<% end %>">
        <label for="<%= period %>_month">Month</label>
        <% if @datafile.errors.key? (period+"_month").to_sym %>
          <span class="error-message">Please enter a valid <%= period %> month</span>
        <% end %>
        <%= text_field_tag "datafile[#{period}_month]", @datafile.dates[period][:month], id: "#{period}_month", class: "form-control" %>
      </div>

      <div class="form-group form-group-year<% if @datafile.errors.key? (period+"_year").to_sym %> form-group-error<% end %>">
        <label for="<%= period %>_year">Year</label>
        <% if @datafile.errors.key? (period+"_year").to_sym %>
          <span class="error-message">Please enter a valid <%= period %> year</span>
        <% end %>
        <%= text_field_tag "datafile[#{period}_year]", @datafile.dates[period][:year], id: "#{period}_year", class: "form-control" %>
      </div>
    </div>
  </fieldset>
</div>
